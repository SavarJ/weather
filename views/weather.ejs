<%- include("partials/header") -%>

<body class="weather-body">

    <div id="weather">
        <div class="container">
            <div class="row">
                <div class="col-md-4 wimg">
                    <img class="weather-img" src="<%= weatherIconUrl %> " alt='weather-img'>
                </div>
                <div class="col-md-8 wdesc">
                    <p><%= weatherDescLine %> </p>
                    <p><%= mainTempLine %> </p>
                    <p><%= moreTempLine %> </p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <form action='/retry' method='GET'>
                        <button class="btn btn-lg btn-dark btn-search-again" type='submit'>SEARCH
                            AGAIN</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <%- include("partials/footer") -%>